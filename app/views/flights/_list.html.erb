<%= form_with model: Booking, method: :get do |form| %>
  <% flight_options.each do |f| %>
    <%= form.radio_button :flight_id, f.id %>
    <%= form.label :flight_id, "#{f.departure_airport.code} to #{f.arrival_airport.code} departing #{f.format_date(f.depart_datetime)} at #{f.format_time(f.depart_datetime)}" %> <br>
    <%= form.hidden_field :num_tickets, value: params[:num_tickets] %>
  <% end %>
  <br> <br>
  <%= form.submit "Book Flight" %>
<% end %>